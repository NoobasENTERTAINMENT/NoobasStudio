<UserControl
    x:Class="NoobasStudio.Views.TranslationFieldAndGoogleTranslateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NoobasStudio.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <materialDesign:Flipper>
            <materialDesign:Flipper.FrontContent>
                <Grid Background="{StaticResource NooViolet}">
                    <TextBox
                        Width="700"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Your translation"
                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                        BorderBrush="Transparent"
                        FontSize="30"
                        Foreground="White"
                        IsReadOnly="{Binding IsTranslationEnded, UpdateSourceTrigger=PropertyChanged}"
                        MaxLength="150"
                        Text="{Binding Translation, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center">

                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding AddTranslatedLineCommand}" />
                        </TextBox.InputBindings>

                        <TextBox.Resources>
                            <Style TargetType="{x:Type materialDesign:SmartHint}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Button
                        ToolTip="Switch to G-translator"
                        Height="40"
                        Margin="10,10,20,10"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        materialDesign:ButtonAssist.CornerRadius="30"
                        Command="{x:Static materialDesign:Flipper.FlipCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <materialDesign:PackIcon
                            Width="40"
                            Height="40"
                            Foreground="#FF969696"
                            Kind="CircleArrows" />
                    </Button>
                </Grid>
            </materialDesign:Flipper.FrontContent>
            <materialDesign:Flipper.BackContent>
                <Grid Background="{StaticResource NooViolet}">
                    <StackPanel Orientation="Horizontal">
                        <TextBox
                            Tag="{Binding TranslatorField}"
                            Width="550"
                            Height="50"
                            Margin="40,0,40,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="What do you want to translate?"
                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                            BorderBrush="Transparent"
                            FontSize="30"
                            Foreground="White"
                            MaxLength="150"
                            Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center">

                            <TextBox.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding SwapLanguageCommand}">
                            <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            VerticalAlignment="Center"
                            Foreground="Gray"
                            Kind="SwapHorizontal" />
                        </Button>
                        <TextBlock
                            Tag="{Binding TranslatorResultField}"
                            TextWrapping="Wrap"
                            Width="450"
                            Height="50"
                            Margin="40,0,40,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Translated"
                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                            FontSize="30"
                            Foreground="White"
                            Text="{Binding Result, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center">

                            <TextBlock.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </TextBlock.Resources>
                        </TextBlock>
                    </StackPanel>
                    <Button
                        ToolTip="Switch back"
                        Height="40"
                        Margin="10,10,20,10"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        materialDesign:ButtonAssist.CornerRadius="30"
                        Command="{x:Static materialDesign:Flipper.FlipCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <materialDesign:PackIcon
                            Width="40"
                            Height="40"
                            Foreground="#FF969696"
                            Kind="CircleArrows" />
                    </Button>
                </Grid>
            </materialDesign:Flipper.BackContent>
        </materialDesign:Flipper>

    </Grid>

</UserControl>
