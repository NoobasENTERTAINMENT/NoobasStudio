<UserControl
    x:Class="NoobasStudio.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NoobasStudio.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Menu Margin="25" materialDesign:MenuAssist.TopLevelMenuItemHeight="25">

            <MenuItem
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Header="Menu">
                <MenuItem Command="{Binding LoadFileCommand}" Header="Load file" />
                <MenuItem Header="Paste URL from YouTube" />
                <MenuItem Header="Save" />
                <MenuItem Command="{Binding LoadSaveCommand}" Header="Load save" />
                <MenuItem Header="Split parts">
                    <MenuItem Header="1" />
                    <MenuItem Header="2" />
                    <MenuItem Header="3" />
                </MenuItem>
            </MenuItem>
            <Menu.Resources>
                <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FF190040" />
            </Menu.Resources>
            <Menu.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="White" />
                </DataTemplate>
            </Menu.ItemTemplate>
        </Menu>
    </Grid>
</UserControl>
