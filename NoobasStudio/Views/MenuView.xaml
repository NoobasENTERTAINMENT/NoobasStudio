<UserControl
    x:Class="NoobasStudio.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NoobasStudio.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Menu Margin="25" materialDesign:MenuAssist.TopLevelMenuItemHeight="25">
            <MenuItem
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Header="Project">
                <MenuItem Header="Create" />
                <MenuItem Header="Load" />
                <MenuItem Header="Save" />
            </MenuItem>
            <MenuItem
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Header="File">
                <MenuItem Header="Export translation as .txt" />
            </MenuItem>
            <MenuItem
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Header="Subtitles">
                <MenuItem Header="Load">
                    <MenuItem Command="{Binding LoadSubsCommand}" Header="As a .txt file" />
                    <MenuItem Header="As a URL from YouTube" ToolTip="Get subtitles from YouTube video" />
                </MenuItem>
            </MenuItem>
            <MenuItem
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Header="Edit">
                <MenuItem Header="Split parts">
                    <MenuItem Header="For 2 persons">
                        <MenuItem
                            Command="{Binding PartOneSplitCommand}"
                            CommandParameter="1"
                            Header="Part №1" />
                        <MenuItem
                            Command="{Binding PartOneSplitCommand}"
                            CommandParameter="2"
                            Header="Part №2" />
                    </MenuItem>
                    <MenuItem Header="For 3 persons">
                        <MenuItem
                            Command="{Binding PartOneSplitCommand}"
                            CommandParameter="3"
                            Header="Part №1" />
                        <MenuItem
                            Command="{Binding PartOneSplitCommand}"
                            CommandParameter="4"
                            Header="Part №2" />
                        <MenuItem
                            Command="{Binding PartOneSplitCommand}"
                            CommandParameter="5"
                            Header="Part №3" />
                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <Menu.Resources>
                <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FF190040" />
            </Menu.Resources>
            <Menu.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="White" />
                </DataTemplate>
            </Menu.ItemTemplate>
        </Menu>
    </Grid>
</UserControl>
