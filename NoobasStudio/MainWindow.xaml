<Window
    x:Class="NoobasStudio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NoobasStudio"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NoobasStudio.Views"
    xmlns:vms="clr-namespace:NoobasStudio.ViewModels"
    Title="MainWindow"
    Width="1200"
    Height="750"
    Background="#FF2F1A5F"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="165*" />
            <RowDefinition Height="52*" />
        </Grid.RowDefinitions>
        <views:MenuView Grid.Row="0" DataContext="{Binding CurrentViewModel}" />
        <views:SubsView Grid.Row="0" />
        <views:TranslationFieldView Grid.Row="1" />
        <Button
            Width="60"
            Height="60"
            Margin="15"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Button_Click"
            Style="{StaticResource MaterialDesignIconButton}">
            <materialDesign:PackIcon
                Width="40"
                Height="40"
                Foreground="White"
                Kind="Close" />
        </Button>
    </Grid>
</Window>
